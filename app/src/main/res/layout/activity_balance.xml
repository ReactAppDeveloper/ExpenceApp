<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="expence.ubiad.example.com.expence.Balance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Balance"
            android:id="@+id/txt_view5"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"

            android:id="@+id/edt_balance1"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal|right"
            android:background="#ffffff"
            android:focusable="false"
            android:enabled="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance:"
            android:id="@+id/txt_view1"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edt_balance"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal|right"
            android:background="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail:"
            android:id="@+id/txt_view3"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/edt_desc"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal|right"
            android:background="#ffffff" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edt_date"
            android:hint="Select Date"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal|right"
            android:background="#ffffff"
            android:focusable="false"
            android:enabled="true"
            android:textAlignment="center" />

    </LinearLayout>
    <EditText
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edt_time"
        android:hint="Select Time"
        android:textColor="#000000"
        android:layout_marginTop="-51dp"
        android:layout_gravity="center_horizontal|right"
        android:background="#ffffff"
        android:focusable="false"
        android:enabled="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/btn_save1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp" />
</LinearLayout>