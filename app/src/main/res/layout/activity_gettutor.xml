<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Contact Detail"
            android:id="@+id/txt_view5"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginTop="105dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp">
            <EditText
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:id="@+id/edt_st_name"
                android:hint="Student Name"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textAlignment="center" />
            <EditText
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/edt_st_phone"
                android:hint="Student Phone no"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textAlignment="center"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230dp">
            <EditText
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:id="@+id/edt_st_email"
                android:hint="Email Address"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textAlignment="center" />
            <EditText
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/edt_st_address"
                android:hint="Home Address"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textAlignment="center"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Student Detail"
            android:id="@+id/txt_view6"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginTop="340dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400dp">
            <EditText
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:id="@+id/edt_school"
                android:hint="Student School"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textAlignment="center" />
            <EditText
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/edt_st_timing"
                android:hint="Student Timing"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textAlignment="center"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="460dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edt_st_class"
                android:hint="Student Class"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textAlignment="center" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET A TUTOR"
            android:id="@+id/btn_gettutor"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="600dp" />
</RelativeLayout>
</ScrollView>